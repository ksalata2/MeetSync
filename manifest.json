{
    "manifest_version": 2,
    "name": "MeetSync",
    "version": "1.0",
    "description": "Calendar for Students!",
    "icons": {
        "128": "icon128.png",
        "48": "icon48.png",
        "16": "icon16.png"
    },
    "browser_action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.html"
    },
    "permissions": ["alarms", "notifications", "videoCapture"],
    "background": {
        "scripts": ["scripts/background.js", "scripts/Calendar.js"],
        "persistent": false
    }
}